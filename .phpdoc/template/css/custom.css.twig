:root{
    /* Colors */
    --primary-color: #F29100;
    --primary-color-darken: #BF5E00;
    --primary-color-darker: #AF4E00;
    --primary-color-darkest: #8F2E00
    --primary-color-lighten: #FA1;
    --primary-color-lighter: #FB2;
    --dark-gray: #d1d1d1;
    --light-gray: #f0f0f0;


    --bg-dark-default: #3E3A3A;
    --tx-dark-default: #dedada;
    --bg-dark-primary: #1E1A1A;
    --tx-dark-primary: #DEDADA;

    --color-blue: #0091F2;
    --color-green: #00f291;
    --color-orange: #f29100;
    --color-lightblue: #CCEEFF;
    --color-red: #f21e1e;
    --color-purple: #f20091;
    --color-violet: #9100f2;

    --text-color: var(--primary-color-darkest);

    --header-height: var(--spacing-xxxxl);
    --header-bg-color: var(--primary-color);
    --code-background-color: var(--bg-dark-primary);
    --code-border-color: transparent;
    --button-border-color: var(--primary-color-darken);
    --button-color: transparent;
    --button-color-primary: var(--primary-color);
    --button-text-color: #DEDADA;
    --button-text-color-primary: #F1F1F1;
    --popover-background-color: rgba(0, 0, 0, 0.75);
    --link-color-primary: var(--primary-color-lighten);
    --link-hover-color-primary: var(--primary-color-lighter);
    --form-field-border-color: var(--light-gray);
    --form-field-color: var(--dark-gray);
    --admonition-success-color: var(--primary-color);
    --admonition-border-color: silver;
    --table-separator-color: var(--primary-color-lighten);
    --title-text-color: var(--primary-color);

    --sidebar-border-color: var(--primary-color);

}

body{
    background-color: var(--bg-dark-default);
    color: var(--tx-dark-default);
}

.phpdocumentor-code
{
    color: var(--tx-dark-primary);
}

.phpdocumentor-signature__visibility{
    color: var(--color-blue);
}

.phpdocumentor-signature__response_type,
.phpdocumentor-signature__argument__return-type,
.phpdocumentor-signature__type
{
    color: var(--color-violet);
}

.phpdocumentor-signature__response_type a,
.phpdocumentor-signature__argument__return-type a,
.phpdocumentor-signature__type a
{
    color: var(--color-green);
}

.phpdocumentor-signature__argument__name,
.phpdocumentor-signature__name
{
    color: var(--color-lightblue);
}

.phpdocumentor-signature__default-value
{
    color: var(--color-orange);
}

.phpdocumentor-search__field
{
    background-color: transparent;
}

.phpdocumentor-search-results__body
{
    background-color: var(--bg-dark-default);
}

.phpdocumentor-search-results__dialog{
    box-shadow: 2px 2px 4px #001, -2px -2px 4px #ffe;
}

.phpdocumentor-element__modifier {
    color: var(--primary-color);
    background-color: var(--light-gray);
}